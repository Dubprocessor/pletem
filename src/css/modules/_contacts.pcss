.contacts {
	display: flex;
	flex-direction: column;
	&__map {
		width: 95%;
		height: 350px;
		margin-top: 0;
		margin-bottom: 10px;
		padding: 0;
	}
	@mixin laptop {
		flex-direction: row;
		justify-content: space-between;

		&__map {
			width: 50%;
			margin-bottom: 0;
		}
	}
}
.mapRefsContainer{
	display: inline-flex;
	justify-content: flex-start;
	margin-bottom: 10px;
	& :last-child {
		margin-left: 10px;
	}
}